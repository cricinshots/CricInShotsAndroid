<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_over"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@color/MyGray2">

    <TextView
        android:id="@+id/tv_optit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What will happen in the next over?"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/GhostWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runs range: "
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/et_r"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="0-5"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:textColor="@color/MyGray"
                    android:background="@drawable/bg_gradient"/>
                <ImageButton
                    android:id="@+id/bt_runup"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_inc"/>
                <ImageButton
                    android:id="@+id/bt_rundwn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_dec"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wickets: "
                android:textColor="@color/headings"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <EditText
                    android:id="@+id/et_w"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/MyGray"
                    android:inputType="number"
                    android:background="@drawable/bg_gradient"/>
                <ImageButton
                    android:id="@+id/bt_wup"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_inc"/>
                <ImageButton
                    android:id="@+id/bt_wdwn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_dec"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/bt_osub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:gravity="center_horizontal"/>
</LinearLayout>