<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:text="Profile"/>
    </RelativeLayout>

    <!--    <com.mikhaellopez.circularimageview.CircularImageView-->
    <!--        android:id="@+id/profile_pic"-->
    <!--        android:layout_marginTop="50dp"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_width="143dp"-->
    <!--        android:layout_height="143dp"-->
    <!--        app:civ_border="true"-->
    <!--        app:civ_border_width="1dp"-->
    <!--        app:civ_border_color="@color/white"-->
    <!--        android:src="@drawable/heart"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Name" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Full Name"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/tv_profilepage"/>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        android:text="Supporting Team"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_team"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/teeam"
        android:text="Chennai Royale"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/tv_profilepage"/>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Current Points"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/tv_profilepage">
        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="50"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/bt_redeem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Redeem"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/right_high"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="65dp"
            android:text="Contact Us"
            android:padding="16dp"/>



</LinearLayout>