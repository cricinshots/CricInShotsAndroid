                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/GhostWhite"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:id="@+id/c1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/GhostWhite"
                        android:textSize="13sp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
