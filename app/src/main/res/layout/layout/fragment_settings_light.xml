<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightModeBgGray"
    android:orientation="vertical"
    tools:context=".SettingsFrag">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_copyright_black_24dp"
        android:drawablePadding="8dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Inator LLP, 2020"
        android:textColor="#626262"
        android:textSize="12sp"
        app:drawableTint="#626262"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/front_land_player_border"
        android:backgroundTint="#DEDEDE"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:foregroundGravity="center_vertical"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/front_land_player_border"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:foregroundGravity="center"
            tools:layout_editor_absoluteX="347dp"
            tools:layout_editor_absoluteY="228dp">

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:paddingStart="10dp"
                android:text="check for updates"
                android:textColor="@color/MyGray2"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/l3"
                app:rippleColor="@color/AliceBlue" />
            <View
                android:id="@+id/l4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button5"/>
            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:shadowColor="#00FFFFFF"
                android:text="Sign Out"
android:textAlignment="viewStart"
                android:textColor="@color/MyGray2"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:rippleColor="@color/AliceBlue" />
            <View
                android:id="@+id/l1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button"/>

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:text="Feedback / Report Bugs"
                android:textColor="@color/MyGray2"
                app:iconPadding="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:textAlignment="viewStart"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/l1"
                app:rippleColor="@color/AliceBlue" />
            <View
                android:id="@+id/l2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button3"/>
            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:elevation="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="about"
                android:textAlignment="viewStart"
                android:textColor="@color/MyGray2"
                app:iconPadding="0dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/l2"
                app:rippleColor="@color/AliceBlue" />
            <View
                android:id="@+id/l3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button4"/>

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:paddingStart="10dp"
                android:text="credits"
                android:textColor="@color/MyGray2"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/l4"
                app:rippleColor="@color/AliceBlue" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:indeterminate="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/front_land_player_border"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>