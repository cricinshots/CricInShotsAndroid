<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teamfragment"
    android:id="@+id/rel_plpage"
    android:background="@color/MyGray3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/lin_wtp">
        <TextView
            android:id="@+id/tv_pt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:padding="10dp"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_wtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_pt2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="10.0sp"
        android:divider="@android:color/transparent"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/lin_wtp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>